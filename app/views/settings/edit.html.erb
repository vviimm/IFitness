<h3>Настройки</h3>

<%= form_for(current_user, url: setting_path,
                        method: :patch,
                          html: {class: "form-horizontal"}) do |f| %>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.text_field :name, autofocus: true,
                                    class: "form-control",
                              placeholder: "Имя" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.text_field :surname, autofocus: true,
                                    class: "form-control",
                              placeholder: "Фамилия" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.email_field :email, autofocus: true,
                                    class: "form-control",
                              placeholder: "Email" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.file_field :avatar %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10 sign_in_remember_me">
      <div class="checkbox">
        <%= f.check_box :remove_avatar %>
        <%= f.label :remove_avatar, 'Удалить аватарку' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit "Обновить данные", class: 'btn btn-primary' %>
    </div>
  </div>

<% end %>
