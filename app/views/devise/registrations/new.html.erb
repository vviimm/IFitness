<h3>Регистрация</h3>

<%= form_for(resource, as: resource_name,
                      url: registration_path(resource_name),
                     html: {class: "form-horizontal"}) do |f| %>

  <%= devise_error_messages! %>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.text_field :name, autofocus: true,
                                  class: "form-control",
                            placeholder: "Имя" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.text_field :surname, autofocus: true,
                                     class: "form-control",
                               placeholder: "Фамилия" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.email_field :email, autofocus: true,
                                    class: "form-control",
                              placeholder: "Email" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.password_field :password, autocomplete: "off",
                                             class: "form-control",
                                       placeholder: "Пароль" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation,
                              autocomplete: "off",
                                     class: "form-control",
                               placeholder: "Подтверждение пароля" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= recaptcha_tags %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit "Создать аккаунт", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
